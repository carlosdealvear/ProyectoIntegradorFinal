<!-- Header -->

<% if(usuarioLogueado != null){ %>

    <%-include("./partials/headerLogueado") %>

    <% } else { %>

    <%-include("./partials/header")%>
    
    <%}%>
<!-- /Header -->

<!-- Novedades -->
<section class="row">
    <article class="col-12 col-md-6 m-auto">
        <h1 class="text-center pt-1">Registro de pel√≠cula</h1>
        <form action="/producto/edit" method="POST">
            <div class="mb-3">
                <label for="nombre" class="form-label">ID del Producto</label>
                <input type="text" size="32" value="<%- idProducto %>" name="idProducto" id="idProducto"/>
              </div>
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre del Producto</label>
              <input type="text" class="form-control" id="nombre" name="nombre">
            </div>
            <div class="mb-3">
                <label for="url" class="form-label">URL de la imagen</label>
                <input type="text" class="form-control" id="url" name="url">
            </div>
            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripcion</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
            </div> 
            <div class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" class="form-control" id="precio" name="precio">
            </div>                                   
            <div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
          </form>            
    </article>
</section>


<!-- footer -->
<%- include("./partials/footer") %>
<!-- /footer -->
