
	<% if(usuarioLogueado != null){ %>

		<%-include("./partials/headerLogueado") %>
	
		<% } else { %>
	
		<%-include("./partials/header")%>
		
		<%}%>

	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/foto-incognito.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.nombre %> <%= usuario.apellido %>
						<% if(usuarioLogueado != null){ %>
						<% if(usuario.id === locals.usuarioLogueado.id){%>
						<a href="/perfil/editar/<%= usuario.id %>">
							<i class="fas fa-cog"></i>
						</a>
						<% } %>
						<% } %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>26 comentarios</li>
						<li>4 productos</li>						
						<li>2021 seguidores</li>
						
					</ul>
				</div>
			</div>
		</div>
	</section>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% for (let i = 0; i < usuario.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="http://localhost:3000/producto/id/<%= usuario.productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= usuario.productos[i].url %>" alt="<%= usuario.productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= usuario.productos[i].nombre %></h2>
							<h3 class="precios" >$ <%= usuario.productos[i].precio %></h3>
							<p><%= usuario.productos[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
				<% } %>
			
	<%- include("./partials/footer") %>
</body>	
</html>